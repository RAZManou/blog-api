{
    "compilerOptions": {
        "lib": ["es5", "es6", "esnext"],
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "outDir": "./build",
        "rootDir": "./src",
        "sourceMap": true,
        "esModuleInterop": true,

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        "strict": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
